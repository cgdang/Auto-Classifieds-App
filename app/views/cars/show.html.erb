<h1><%= @car.year.to_s + " " + @car.make + " " + @car.car_model %></h1>

<%= image_tag @car.picture.url %>
<br>
<br>
	<p><strong>Price: </strong><%= @car.price %></p>
	<p><strong>Year: </strong><%= @car.year %></p>
	<p><strong>Make: </strong><%= @car.make %></p>
	<p><strong>Model: </strong><%= @car.car_model %></p>
	<p><strong>Mileage: </strong><%= @car.mileage %></p>
	<p><strong>Exterior Color: </strong><%= @car.ext_color %></p>
	<p><strong>Interior Color: </strong><%= @car.int_color %></p>
	<p><strong>Engine: </strong><%= @car.engine %></p>
	<p><strong>Transmission: </strong><%= @car.transmission %></p>
	<p><strong>Drivetrain: </strong><%= @car.drivetrain %></p>
	<p><strong>Fuel: </strong><%= @car.fuel %></p>
	<p><strong>Doors: </strong><%= @car.door_count %></p>
	<p><strong>Description: </strong><%= @car.description %></p>
	<p><strong>Contact Email: </strong><%= @car.contact_email %></p>
<br>
<% if (current_user && @car.contact_email == current_user.email) %>
	<%= link_to 'EDIT', edit_car_path %>
	<br>
	<%= link_to 'DELETE', car_path, method: :delete, data: { confirm: 'Are you sure you want to remove listing?' } %>
<% end %>
<br>
<%= link_to 'BACK TO ALL LISTINGS', cars_path %>
